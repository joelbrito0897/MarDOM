@model ReflectionIT.Mvc.Paging.PagingList<Model.Category>
@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging
@{
    ViewData["Title"] = "Categorias";
}
<script src="~/js/Category/Index.js"></script>

<div class="float-right mx-5">
    <a onclick="createCategory()" class="create">Nuevo <i class="fas fa-plus"></i></a>
</div>

@if (Model.Count > 0)
{
    <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Listado de Categorias.</h2>

    <div class="limiter">
        <div class="container-table100">
            <div class="wrap-table100">
                <div class="table100">
                    <table>
                        <thead>
                            <tr class="table100-head">
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        <button class="btn btn-primary" onclick="updateCategory('@item.Id', '@item.Name')">Editar</button> |
                                        <button class="btn btn-primary" onclick="deleteCategory('@item.Id')">Eliminar</button>
                                    </td>
                                </tr>
                            
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Listado de Categorias.</h2>
    <script>
        Swal.fire("Aviso!.", "No hay categorias registrado, favor registrarlo.", "warning");
    </script>
}

<nav aria-label="Warehouse navigation example">
    <vc:pager paging-list="@Model" />
</nav>
